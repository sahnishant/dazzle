---
// src/components/Hero.astro
---
<section class="hero-section">
  <div class="hero-content container">
    <h1>Timeless Brilliance, Unforgettable Moments</h1>
    <p>Discover our exquisite collection of handcrafted diamond jewelry.</p>
    <a href="/collections/" class="btn">Explore Collections</a>
  </div>
</section>

<style>
  .hero-section {
    background: url('/images/hero-diamond.png') no-repeat center center/cover;
    min-height: 600px; /* Adjust height as needed */
    display: flex;
    align-items: center;
    justify-content: center;
    color: white;
    text-align: center;
    position: relative; /* For overlay */
  }
  .hero-section::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: rgba(0,0,0,0.3); /* Dark overlay for readability */
    z-index: 1;
  }
  .hero-content {
    position: relative;
    z-index: 2;
    padding: 2rem;
    background: rgba(0,0,0,0.4); /* Slightly darker background for text */
    border-radius: 8px;
    max-width: 800px;
  }
  .hero-content h1 {
    font-size: 3.5rem;
    margin-bottom: 1rem;
    color: white;
  }
  .hero-content p {
    font-size: 1.5rem;
    margin-bottom: 2rem;
  }
  .hero-content .btn {
    font-size: 1.2rem;
    padding: 1rem 2rem;
  }

  @media (max-width: 768px) {
    .hero-section {
      min-height: 400px;
    }
    .hero-content h1 {
      font-size: 2.5rem;
    }
    .hero-content p {
      font-size: 1.2rem;
    }
  }
</style>